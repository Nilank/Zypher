<% include ../partials/header.ejs %>


<div class="ui main text container segment">
    <div class="ui huge header">Student Information</div>
    
        <div class="field">
            <label>Name</label>
            <input type="text" name="student[name]" value= <%= student.name %> />
        </div>
           <div class="field">
            <label>Email</label>
            <input type="text" name="student[email]" value= <%= student.email %> />
        </div>
           <div class="field">
            <label>Number</label>
            <input type="text" name="student[number]" value= <%= student.number %> />
        </div>
            <div class="field">
            <label>Designation</label>
            <input type="text" name="student[designation]" value= <%= student.designation %> />
        </div>
            <div class="field">
            <label>Address</label>
            <input type="text" name="student[address]" value= <%= student.address %> />
        </div>
            <div class="field">
            <label>Interests</label>
            <input type="text" name="student[interests]" value= <%= student.interests %> />
        </div>
        <a class="ui orange basic button" href="/students/<%= student._id %>/edit">Edit</a>
        <a class="ui green basic button" href="/students/<%= student._id %>/comments/new">Comment</a>
        <form id="delete" action="/students/<%= student._id %>?_method=DELETE" method="POST">
            <button class="ui red basic button">Delete</button>
        </form>

</div>


<h2 class="ui center aligned icon header">
  <i class="circular users icon"></i>
  Comments
</h2>

<center>
<div class="ui list">
  <div class="item">
      <% student.comments.forEach(function(comment){ %> <br>
    <i class="user secret icon"></i>
    <div class="content">
      <a class="header"><%= comment.author %></a>
      <div class="description">Last seen watching <a><b><%= comment.text %></b></a> just now.</div> <br>
    </div>
    <% }) %>
  </div>
</div>
</center>

<% include ../partials/footer.ejs %>